{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@pansy/watermark": [
        "./packages/core/src/index.ts"
      ],
      "@pansy/react-watermark": [
        "./packages/react/src/index.ts"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
